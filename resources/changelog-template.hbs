{{#each releases}}
  ### [{{title}}]({{href}})

  {{! List commits with `Breaking change: ` somewhere in the message }}
  {{#commit-list commits heading='### Breaking Changes' message='Breaking change: '}}
    - {{subject}} [`{{shorthash}}`]({{href}})
  {{/commit-list}}

  {{! List commits that add new features, but not those already listed above }}
  {{#commit-list commits heading='### New Features' message='feat: ' exclude='Breaking change: '}}
    - {{subject}} [`{{shorthash}}`]({{href}})
  {{/commit-list}}

  {{! List commits that fix bugs, but not those already listed above }}
  {{#commit-list commits heading='### Bug Fixes' message='fix: ' exclude='Breaking change: ,feat: '}}
    - {{subject}} [`{{shorthash}}`]({{href}})
  {{/commit-list}}

  {{! List other commits not already listed above }}
  {{#commit-list commits heading='### Other Changes' exclude='Breaking change: ,feat: ,fix: '}}
    - {{subject}} [`{{shorthash}}`]({{href}})
  {{/commit-list}}

  {{! Ignore releases not matching the above criteria --}}
  {{#if (and (not (commit-list-empty commits 'Breaking change: ')) (not (commit-list-empty commits 'feat: ' exclude='Breaking change: ')) (not (commit-list-empty commits 'fix: ' exclude='Breaking change: ,feat: ')) (not (commit-list-empty commits exclude='Breaking change: ,feat: ,fix: '))) }}
  {{else}}
  {{!-- No relevant changes for this release --}}
  {{/if}}
{{/each}}